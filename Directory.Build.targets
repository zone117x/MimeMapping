<?xml version="1.0" encoding="utf-8"?>
<Project>

    <PropertyGroup>
        <MinVerMinimumMajorMinor>2.0</MinVerMinimumMajorMinor>
        <MinVerTagPrefix>v</MinVerTagPrefix>
        <PackageProjectUrl>https://github.com/visualon/MimeMapping</PackageProjectUrl>
        <PackageLicenseUrl />
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <Product>VisualOn MimeMapping</Product>
        <Description>Updated version of original MimeMapping</Description>
        <Authors>$(Authors); VisualOn</Authors>
        <Company>VisualOn GmbH</Company>
        <PackageId>VisualOn.MimeMapping</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
        <PackageReference Include="MinVer" Version="4.2.0" PrivateAssets="All" />
    </ItemGroup>

</Project>
